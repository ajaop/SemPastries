<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SemPastries" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darker_red</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="onbHeader" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="onbSubheader">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="subtext">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintEnabled">false</item>
        <item name="android:textColorHint">@color/gray_31</item>
        <item name="boxStrokeColor">@color/text_input_border</item>
        <item name="errorTextColor">@color/red_3</item>
        <item name="errorIconTint">@color/red_3</item>
        <item name="boxStrokeErrorColor">@color/red_3</item>
    </style>

    <style name="TextInputDropDown" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/gray_31</item>
        <item name="boxStrokeColor">@color/text_input_border</item>
        <item name="errorTextColor">@color/red_3</item>
        <item name="errorIconTint">@color/red_3</item>
        <item name="boxStrokeErrorColor">@color/red_3</item>
    </style>

    <style name="onNextBtnText" parent="TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:letterSpacing">-0.03</item>
    </style>

    <style name="respayButtonShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">4dp</item>
    </style>

    <style name="onbBtn" parent="Widget.MaterialComponents.Button">
        <item name="android:textAppearance">@style/onNextBtnText</item>
        <item name="shapeAppearance">@style/respayButtonShapeAppearance</item>
    </style>

</resources>